<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vissionarray.shabbirhussain.newchilsacts.AboutNCPCR"
    android:background="@mipmap/aboutbg">


 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:background="@mipmap/banner"
             android:gravity="center_vertical|center_horizontal"
             android:text="About NCPCR"
             android:paddingBottom="30dp"
             android:textSize="20sp"
             android:textColor="#ffffff"/>

         <TextView
             android:id="@+id/aboutNCPCR"
             style="@style/CustomText"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:alpha="0.9"
             android:background="#ffffff"
             android:textColor="#000000"
             android:text="Loreum Ipsum dosum" />

         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:text="Visit NCPCR Website"
             android:textColor="#2b5ad1"
             android:textSize="20sp" />

     </LinearLayout>
 </ScrollView>
</RelativeLayout>
